<Window x:Class="WpfClientAsmx.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClientAsmx"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="9.5*" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Products">
                <MenuItem Header="List" Click="List_Click"/>
                <MenuItem Header="Get" Click="Get_Click"/>
                <MenuItem Header="Add" Click="Add_Click"/>
                <MenuItem Header="Update" Click="Update_Click"/>
                <MenuItem Header="Delete" Click="Delete_Click"/>
                <MenuItem Header="Exit" Click="Exit_Click"/> 
            </MenuItem>
        </Menu>
        <DataGrid Name="productgrid" Grid.Row="1" />
        <StatusBar Grid.Row="2"/>
    </Grid>
</Window>
